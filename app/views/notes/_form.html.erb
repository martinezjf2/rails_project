

<%= form_for @note do |f| %>
<%= f.hidden_field :book_id %>

<%= f.label "Page Number"%>
<%= f.text_field :page_number, :placeholder => "Enter Page Number" %><br><br>
<%= f.label "Summary" %>
<%= f.text_area :summary, :placeholder => "Enter Summary..." %><br><br><br><br>
<%= f.submit "Add Note" , :class => 'btn' %>
<%end%>